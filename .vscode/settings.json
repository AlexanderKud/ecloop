{
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[py]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "editor.formatOnSave": true,
  "files.exclude": {
    "a.out": true,
    "ecloop": true
  },
  "prettier.requireConfig": false,
  "ruff.lineLength": 99
}
